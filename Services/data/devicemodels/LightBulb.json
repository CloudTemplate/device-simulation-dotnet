{
  "SchemaVersion": "1.0.0",
  "Id": "Lightbulb-01",
  "Version": "0.0.1",
  "Name": "Lightbulb",
  "Description": "Lightbulb with external temperature, on/off state.",
  "Protocol": "MQTT",
  "Simulation": {
    "InitialState": {
      "online": true,
      "LightOn": true,
      "temperature": 75.0,
      "temperature_unit": "F"
    },
    "Script": {
      "Type": "javascript",
      "Path": "Lightbulb-state.js",
      "Interval": "00:00:05"
    }
  },
  "Properties": {
    "Type": "Lightbulb",
    "Firmware": "1.0.0",
    "DeviceMethodStatus": "",
    "Location": "Building 43",
    "Latitude": 47.638928,
    "Longitude": -122.13476
  },
  "Telemetry": [
    {
      "Interval": "00:00:10",
      "MessageTemplate": "{\"temperature\":${temperature},\"temperature_unit\":\"${temperature_unit}\"}",
      "MessageSchema": {
        "Name": "Lightbulb-temperature;v1",
        "Format": "JSON",
        "Fields": {
          "temperature": "double",
          "temperature_unit": "text"
        }
      }
    }
  ],
  "CloudToDeviceMethods": {
    "LightOnOff": {
      "Type": "javascript",
      "Path": "LightbulbTurnOnOrOff.js"
    }
  }
}